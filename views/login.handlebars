<div class='columns'>
  <div class='column is-half'>
    <h2 class='title'>Login</h2>

    <form class='login-form'>
      <div class='field'>
        <label for='email-login' class='label'>Email:</label>
        <div class='control'>
          <input class='input' type='text' id='email-login' />
        </div>
      </div>
      <div class='field'>
        <label for='password-login' class='label'>Password:</label>
        <div class='control'>
          <input class='input' type='password' id='password-login' />
        </div>
      </div>
      <div class='field'>
        <div class='control'>
          <button class='button is-primary' type='submit'>Login</button>
        </div>
      </div>
    </form>
  </div>
  <div class='column is-half'>
    <h2 class='title'>Signup</h2>

    <form class='signup-form'>
      <div class='field'>
        <label for='username-signup' class='label'>Username:</label>
        <div class='control'>
          <input class='input' type='text' id='name-signup' />
        </div>
      </div>
      <div class='field'>
        <label for='email-signup' class='label'>Email:</label>
        <div class='control'>
          <input class='input' type='text' id='email-signup' />
        </div>
      </div>
      <div class='field'>
        <label for='password-signup' class='label'>Password:</label>
        <div class='control'>
          <input class='input' type='password' id='password-signup' />
        </div>
      </div>
      <div class='field'>
        <div class='control'>
          <button class='button is-primary signup' type='submit'>Signup</button>
        </div>
      </div>
    </form>
  </div>
</div>